{
  "name": "instatalk-fullstack",
  "version": "1.0.0",
  "description": "InstaTalk - Real-time Chat Application",
  "main": "server/index.js",
  "scripts": {
    "start": "cd server && npm start",
    "build": "npm install && npm run build:frontend && cd server && npm install",
    "build:frontend": "vite build",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd server && npm run dev",
    "install:all": "npm install && cd server && npm install"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "vite": "^6.0.1"
  },
  "keywords": ["chat", "socket.io", "react", "express", "mongodb"],
  "author": "Your Name",
  "license": "MIT"
}